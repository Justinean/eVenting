        "outDir": "./build",
        "composite": true,
        "rootDir": "./src",
        "strict": true,
        "typeRoots": ["./types"],
        "types": ["index"],
        "moduleResolution": "node"
    },
    "include": ["./src/*.ts/", "./src/**/*.ts"],
